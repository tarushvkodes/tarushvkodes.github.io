/* CSS Reset and Base Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

html { scroll-behavior: smooth; }

body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Helvetica', 'Roboto', 'Arial', sans-serif;
    line-height: 1.6;
    color: #1d1d1f;
    background-color: #ffffff;
}

/* --- Optional: top-of-page backdrop so the glass blur is noticeable even on white --- */
body::before {
    content: "";
    position: fixed;
    inset: -120px 0 auto 0;      /* sits behind the header area */
    height: 280px;
    background: radial-gradient(1200px 300px at 20% -40%, rgba(59,130,246,0.25), rgba(59,130,246,0) 60%),
                radial-gradient(1000px 260px at 80% -30%, rgba(16,185,129,0.20), rgba(16,185,129,0) 60%);
    pointer-events: none;
    z-index: 0;                   /* behind everything */
}

/* Container */
.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
}

/* ------------------ Navigation (Edge-to-edge Frosted) ------------------ */
.navbar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    width: 100%;
    height: 72px;
    z-index: 1000;

    /* iOS-style liquid glass */
    background: rgba(255, 255, 255, 0.58);
    backdrop-filter: blur(28px) saturate(180%);
    -webkit-backdrop-filter: blur(28px) saturate(180%);

    /* Crisp hairline + subtle separation */
    border-bottom: 0.5px solid rgba(0, 0, 0, 0.06);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.04);

    /* Smooth transitions on scroll */
    will-change: backdrop-filter, background-color;
    transition: background 0.2s ease, box-shadow 0.2s ease;
}

/* Edge-to-edge glass layer */
.navbar::before {
    content: "";
    position: absolute;
    inset: 0;
    background: inherit;
    backdrop-filter: inherit;
    -webkit-backdrop-filter: inherit;
    z-index: -1;
}

/* Optional: subtle bottom glow */
.navbar::after {
    content: "";
    position: absolute;
    left: 0;
    right: 0;
    bottom: -1px;
    height: 18px;
    pointer-events: none;
    background: linear-gradient(to bottom, rgba(0, 0, 0, 0.06), rgba(0, 0, 0, 0));
}

.nav-container {
    max-width: 1200px;
    margin: 0 auto;
    padding-left: max(24px, env(safe-area-inset-left));
    padding-right: max(24px, env(safe-area-inset-right));
    height: 72px;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

/* Brand text with glass effect */
.nav-brand h2 {
    font-size: 1.5rem;
    font-weight: 600;
    color: rgba(29, 29, 31, 0.92);
    text-shadow: 0 1px 1px rgba(255, 255, 255, 0.35);
}

.nav-menu {
    display: flex;
    gap: 32px;
}

.nav-link {
    text-decoration: none;
    color: #1d1d1f;
    font-weight: 500;
    font-size: 0.95rem;
    transition: color 0.3s ease;
    position: relative;
}

.nav-link:hover { color: #007aff; }

.nav-link::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background-color: #007aff;
    transition: width 0.3s ease;
}

.nav-link:hover::after { width: 100%; }

.nav-toggle {
    display: none;
    flex-direction: column;
    cursor: pointer;
}

.bar {
    width: 24px;
    height: 2px;
    background-color: #1d1d1f;
    margin: 3px 0;
    transition: 0.3s;
}

/* Hero Section */
.hero {
    padding: 120px 0 80px;
    min-height: 100vh;
    display: flex;
    align-items: center;
    position: relative;
    z-index: 1; /* above the body::before gradient */
}

.hero-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 80px;
    align-items: center;
}

.hero-title {
    font-size: 3.5rem;
    font-weight: 700;
    margin-bottom: 24px;
    line-height: 1.1;
}

.hero-subtitle {
    font-size: 1.5rem;
    font-weight: 500;
    color: #86868b;
    margin-bottom: 32px;
    line-height: 1.4;
}

.hero-description { margin-bottom: 40px; }

.hero-description p {
    font-size: 1.1rem;
    margin-bottom: 16px;
    color: #515154;
    line-height: 1.6;
}

.hero-buttons {
    display: flex;
    gap: 16px;
    flex-wrap: wrap;
}

.btn {
    display: inline-block;
    padding: 14px 32px;
    font-size: 1rem;
    font-weight: 500;
    text-decoration: none;
    border-radius: 100px;
    transition: all 0.3s ease;
    border: 2px solid transparent;
}

.btn-primary {
    background-color: #007aff;
    color: white;
}

.btn-primary:hover {
    background-color: #0056cc;
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 122, 255, 0.3);
}

.btn-secondary {
    background-color: transparent;
    color: #007aff;
    border-color: #007aff;
}

.btn-secondary:hover {
    background-color: #007aff;
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 122, 255, 0.3);
}

.hero-image { display: flex; justify-content: center; }

.profile-image {
    width: 320px;
    height: 320px;
    border-radius: 50%;
    object-fit: cover;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
}

.profile-image:hover { transform: scale(1.05); }

/* Sections */
.section { padding: 80px 0; }
.section-gray { background-color: #f5f5f7; }

.section-title {
    font-size: 2.5rem;
    font-weight: 700;
    text-align: center;
    margin-bottom: 64px;
    color: #1d1d1f;
}

/* Education Section */
.education-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 40px;
}

.education-card {
    background: white;
    padding: 40px;
    border-radius: 20px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.education-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
}

.education-card h3 {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 8px;
    color: #1d1d1f;
}

.education-year {
    font-size: 1rem;
    color: #007aff;
    font-weight: 500;
    margin-bottom: 20px;
}

.education-details p {
    margin-bottom: 12px;
    color: #515154;
    line-height: 1.6;
}

/* Experience Section */
.experience-item {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
}

.experience-item h3 {
    font-size: 2rem;
    font-weight: 600;
    margin-bottom: 8px;
    color: #1d1d1f;
}

.company {
    font-size: 1.2rem;
    color: #007aff;
    font-weight: 500;
    margin-bottom: 24px;
}

.experience-description p {
    font-size: 1.1rem;
    margin-bottom: 16px;
    color: #515154;
    line-height: 1.6;
}

/* Skills Section */
.skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 60px;
}

.skills-category h3 {
    font-size: 1.8rem;
    font-weight: 600;
    margin-bottom: 32px;
    text-align: center;
    color: #1d1d1f;
}

.skills-list {
    display: flex;
    flex-wrap: wrap;
    gap: 12px;
    justify-content: center;
}

.skill-tag {
    background-color: #007aff;
    color: white;
    padding: 10px 20px;
    border-radius: 100px;
    font-size: 0.95rem;
    font-weight: 500;
    transition: all 0.3s ease;
}

.skill-tag:hover {
    background-color: #0056cc;
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(0, 122, 255, 0.3);
}

/* Certifications Section */
.certifications-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 40px;
}

.certification-card {
    background: white;
    padding: 40px;
    border-radius: 20px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.certification-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
}

.certification-card h3 {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 16px;
    color: #1d1d1f;
}

.certification-description {
    font-size: 1.1rem;
    color: #515154;
    margin-bottom: 16px;
    line-height: 1.6;
}

.certification-issuer,
.certification-skills-text {
    font-size: 1rem;
    color: #86868b;
    margin-bottom: 24px;
    line-height: 1.6;
}

.certification-link {
    color: #007aff;
    text-decoration: none;
    font-weight: 500;
    font-size: 1rem;
    transition: color 0.3s ease;
}

.certification-link:hover { color: #0056cc; }

/* Projects Section */
.projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 40px;
}

.project-card {
    background: white;
    padding: 40px;
    border-radius: 20px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.project-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
}

.project-card h3 {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 16px;
    color: #1d1d1f;
}

.project-description {
    font-size: 1.1rem;
    color: #515154;
    margin-bottom: 16px;
    line-height: 1.6;
}

.project-tech,
.project-achievement {
    font-size: 1rem;
    color: #86868b;
    margin-bottom: 24px;
    line-height: 1.6;
}

.project-link {
    color: #007aff;
    text-decoration: none;
    font-weight: 500;
    font-size: 1rem;
    transition: color 0.3s ease;
}

.project-link:hover { color: #0056cc; }

/* Volunteer Section */
.volunteer-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 40px;
}

.volunteer-item {
    text-align: center;
    padding: 32px 24px;
    background: white;
    border-radius: 16px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    transition: transform 0.3s ease;
}

.volunteer-item:hover { transform: translateY(-4px); }

.volunteer-item h3 {
    font-size: 1.3rem;
    font-weight: 600;
    margin-bottom: 8px;
    color: #1d1d1f;
}

.volunteer-period {
    font-size: 1rem;
    color: #007aff;
    font-weight: 500;
    margin-bottom: 16px;
}

.volunteer-item p:last-child {
    color: #515154;
    line-height: 1.6;
}

/* Contact Section */
.contact-content { max-width: 800px; margin: 0 auto; }

.contact-info {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 40px;
}

.contact-item {
    text-align: center;
    padding: 24px;
    background: white;
    border-radius: 16px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    transition: transform 0.3s ease;
}

.contact-item:hover { transform: translateY(-4px); }

.contact-item h4 {
    font-size: 1.2rem;
    font-weight: 600;
    margin-bottom: 12px;
    color: #1d1d1f;
}

.contact-item a {
    color: #007aff;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s ease;
}

.contact-item a:hover { color: #0056cc; }

.contact-item p { color: #515154; line-height: 1.6; }

/* Footer */
.footer {
    background-color: #1d1d1f;
    color: #86868b;
    text-align: center;
    padding: 40px 0;
}

.footer p { font-size: 0.95rem; }

/* ------------------ Responsive ------------------ */
@media (max-width: 768px) {
    .nav-menu {
        position: fixed;
        left: -100%;
        top: 72px;
        flex-direction: column;
        background: rgba(255, 255, 255, 0.75);
        backdrop-filter: blur(24px) saturate(160%);
        -webkit-backdrop-filter: blur(24px) saturate(160%);
        width: 100%;
        text-align: center;
        transition: 0.3s;
        padding: 24px 0;
        border-bottom: 0.5px solid rgba(0, 0, 0, 0.06);
    }

    .nav-menu.active { left: 0; }
    .nav-toggle { display: flex; }

    .nav-toggle.active .bar:nth-child(2) { opacity: 0; }
    .nav-toggle.active .bar:nth-child(1) { transform: translateY(8px) rotate(45deg); }
    .nav-toggle.active .bar:nth-child(3) { transform: translateY(-8px) rotate(-45deg); }

    .hero {
        padding: 100px 0 60px;
        min-height: auto;
    }

    .hero-content {
        grid-template-columns: 1fr;
        gap: 40px;
        text-align: center;
    }

    .hero-title { font-size: 2.5rem; }
    .hero-subtitle { font-size: 1.2rem; }
    .profile-image { width: 250px; height: 250px; }

    .section { padding: 60px 0; }
    .section-title { font-size: 2rem; margin-bottom: 40px; }

    .education-grid,
    .projects-grid,
    .certifications-grid { grid-template-columns: 1fr; }

    .skills-grid { grid-template-columns: 1fr; gap: 40px; }
    .volunteer-grid { grid-template-columns: 1fr; }
    .contact-info { grid-template-columns: 1fr; gap: 24px; }

    .btn { padding: 12px 24px; font-size: 0.95rem; }
    .hero-buttons { justify-content: center; }
}

@media (max-width: 480px) {
    .container { padding: 0 16px; }
    .nav-container { padding: 0 16px; }
    .hero-title { font-size: 2rem; }
    .hero-subtitle { font-size: 1.1rem; }
    .profile-image { width: 200px; height: 200px; }

    .education-card,
    .project-card,
    .certification-card { padding: 24px; }

    .volunteer-item { padding: 24px 16px; }
    .contact-item { padding: 20px; }
}

/* Smooth Animations */
@media (prefers-reduced-motion: no-preference) {
    * { scroll-behavior: smooth; }
}

/* Focus styles for accessibility */
.nav-link:focus,
.btn:focus,
.project-link:focus,
.contact-item a:focus {
    outline: 2px solid #007aff;
    outline-offset: 2px;
}

/* === Liquid Glass Navbar (edge-to-edge, iOS-clean) === */
.navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;                 /* full bleed */
  width: 100vw;             /* defeat any parent width constraints */
  height: 72px;
  z-index: 1000;

  /* iOS-style liquid glass */
  background: rgba(255,255,255,0.58); /* clean white tint */
  -webkit-backdrop-filter: blur(28px) saturate(180%);
  backdrop-filter: blur(28px) saturate(180%);

  /* crisp hairline + subtle separation */
  border-bottom: 0.5px solid rgba(0,0,0,0.06);
  box-shadow: 0 8px 24px rgba(0,0,0,0.04);

  /* make it behave nicely on scroll/compositing */
  will-change: backdrop-filter, background-color;
}

/* Full-bleed background layer so the glass fills edge-to-edge
   even if inner content is centered with a max-width container */
.navbar::before {
  content: "";
  position: absolute;
  inset: 0;
  background: inherit;                      /* same tint as the bar */
  -webkit-backdrop-filter: inherit;
  backdrop-filter: inherit;
  z-index: -1;
}

/* Safe-area padding so content doesnâ€™t crash into the notch edges */
.nav-container {
  max-width: 1200px;
  margin: 0 auto;
  padding-left: max(24px, env(safe-area-inset-left));
  padding-right: max(24px, env(safe-area-inset-right));
  height: 72px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* Brand & hairline-clean text for glass */
.nav-brand h2 {
  font-size: 1.5rem;
  font-weight: 600;
  color: rgba(29,29,31,0.92);
  text-shadow: 0 1px 1px rgba(255,255,255,0.35);
}

/* Optional: subtle bottom glow, like iOS */
.navbar::after {
  content: "";
  position: absolute;
  left: 0; right: 0; bottom: -1px;
  height: 18px;
  pointer-events: none;
  background: linear-gradient(to bottom, rgba(0,0,0,0.06), rgba(0,0,0,0));
}

/* Mobile menu panel should also feel glassy */
@media (max-width: 768px) {
  .nav-menu {
    position: fixed;
    left: 0;
    right: 0;
    top: 72px;
    background: rgba(255,255,255,0.75);
    -webkit-backdrop-filter: blur(24px) saturate(160%);
    backdrop-filter: blur(24px) saturate(160%);
    border-bottom: 0.5px solid rgba(0,0,0,0.06);
  }
}